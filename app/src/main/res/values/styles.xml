<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="my_dialog_theme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/colorPrimaryDark</item>                   <!--header background-->
        <item name="android:windowBackground">@color/background</item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/colorPrimary</item> <!--selected day-->
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/colorPrimaryDark</item>    <!--days of the week-->
    </style>

</resources>
